<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/activity_main_edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ä°sminizi Giriniz" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="sendName"
        android:text="Send Your Name"
        tools:ignore="OnClick" />

    <ImageView
        android:id="@+id/activity_main_imgView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_camera_alt_black_24dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="selectImageFromCamera"
        android:text="Select Image From Camera"
        tools:ignore="OnClick" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="selectImageFromGallery"
        android:text="Select Image From Gallery"
        tools:ignore="OnClick" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="sendImage"
        android:text="Send Image"
        tools:ignore="OnClick" />
</LinearLayout>